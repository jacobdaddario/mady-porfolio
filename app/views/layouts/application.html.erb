<!DOCTYPE html>
<html>
  <head>
    <title>Personal Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <% flash.each do |message_type, message| %>
      <div class='alert alert-<%= message_type %>'>
          <%= message %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
