<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<div>
	<p>Content:</p>
	<%= @post.content %>
</div>

<div>
	<p>Header Image:</p>
  <% if @post.header_image.attached? && @post.header_image.variable? %>
		<%= image_tag @post.header_image.variant(resize_to_limit: [100, 100]) %>
	<% end %>
</div>

<% if user_signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
