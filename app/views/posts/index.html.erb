<div class='mt-16 w-full max-w-2xl mx-auto text-center'>
  <h1 class='text-xl text-gray-700'>Blog</h1>
</div>

<% unless @posts.empty? %>
  <% @posts.each do |post| %>
    <div class='card p-4 my-6 shadow-lg max-w-2xl mx-auto'>
      <div class='flex'>
        <div>
          <h2 class='text-2xl font-semibold text-gray-900'>
            <%= link_to(post.title, post, class: 'no-underline link') %>
          </h2>
          <p class='text-md text-gray-700 leading-snug tracking-wide'>
            <%= post.summary %>
          </p>
          <p class='mt-4 text-md text-gray-400 font-light leading-snug tracking-wide'>
            Published on <%= post.created_at.to_date.to_s(:long_ordinal) %>
          </p>
          <% if user_signed_in? %>
            <div class='flex mt-4 mb-2'>
              <%= link_to 'Edit', edit_post_path(post), class: 'button mr-2 shadow-md' %>
              <%= link_to 'Destroy', post, class: 'button mx-2 bg-gray-500 hover:bg-gray-600', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class='card p-4 my-6 shadow-lg max-w-xl mx-auto text-center'>
    <%= image_tag 'blog.svg', class: 'w-64 h-auto mx-auto mt-4 mb-8' %>
    <p class='text-md text-gray-700 tracking-wide'>Looks like there are no posts published yet.</p>
  </div>
<% end %>